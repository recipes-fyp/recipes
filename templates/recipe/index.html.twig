{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Created</th>
                <th>Steps</th>
                <th>Ingredients</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.summary }}</td>
                <td>{{ recipe.created ? recipe.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ recipe.steps }}</td>
                <td>{{ recipe.ingredients }}</td>
                <td>
                    <div class="btn-group">
                        <a 
                            href="{{ path('recipe_show', {'id': recipe.id}) }}" 
                            data-toggle="tooltip" title="Show recipe" 
                            class="btn btn-light">
                            <span class="fa fa-eye"></span>    
                        </a>

                        <a 
                            href="{{ path('recipe_edit', {'id': recipe.id}) }}"
                            data-toggle="tooltip" title="Edit recipe"  
                            class="btn btn-light">
                            <span class="fa fa-edit"></span>
                        </a>

                        <a 
                            href="{{ path('recipe_show', {'id': recipe.id}) }}" 
                            data-toggle="tooltip" title="Share recipe" 
                            class="btn btn-light">
                            <span class="fa fa-share"></span>
                        </a>

                        <a 
                            href="{{ path('recipe_delete', {'id': recipe.id}) }}" 
                            data-toggle="tooltip" title="Delete recipe" 
                            class="btn btn-danger">
                            <span class="fa fa-trash"></span>
                        </a>

                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_new') }}" 
        data-toggle="tooltip" title="New recipe" 
        class="btn btn-light">
        <span class="fa fa-plus"></span>
        New Recipe
    </a>

{% endblock %}