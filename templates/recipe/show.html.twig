{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ recipe.summary }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ recipe.created ? recipe.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>{{ recipe.steps }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ recipe.ingredients }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a 
            href="{{ path('recipe_index') }}"
            data-toggle="tooltip" title="Back to Recipes" 
            class="btn btn-light">
            <span class="fa fa-arrow-left"></span>
            Back
        </a>

        <a 
            href="{{ path('recipe_edit', {'id': recipe.id}) }}"
            data-toggle="tooltip" title="Edit Recipe" 
            class="btn btn-light">
            <span class="fa fa-edit"></span>
            Edit

        </a>        

        {{ include('recipe/_delete_form.html.twig') }}

    </div>

{% endblock %}