{% extends 'base.html.twig' %}

{% block title %}Collection{% endblock %}

{% block body %}
    <h1>Collection</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collection.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ collection.title }}</td>
            </tr>
            <tr>
                <th>IsShared</th>
                <td>{{ collection.isShared ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('collection_index') }}">back to list</a>

    <a href="{{ path('collection_edit', {'id': collection.id}) }}">edit</a>

    {{ include('collection/_delete_form.html.twig') }}
{% endblock %}